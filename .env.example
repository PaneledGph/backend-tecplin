# ========================================
# TECPLIN BACKEND - VARIABLES DE ENTORNO
# ========================================

# ----------------------------------------
# DATABASE
# ----------------------------------------
# Base de datos
DATABASE_URL="postgresql://usuario:password@localhost:5432/tecplin"

# ----------------------------------------
# JWT AUTHENTICATION
# ----------------------------------------
JWT_SECRET="tu_jwt_secret_super_seguro_aqui"
JWT_REFRESH_SECRET=otro_secreto_diferente_para_refresh_token_minimo_32_caracteres

# ----------------------------------------
# EMAIL CONFIGURATION
# ----------------------------------------
EMAIL_HOST="smtp.ethereal.email"
EMAIL_PORT=587
EMAIL_USER="tu_usuario_ethereal"
EMAIL_PASS="tu_password_ethereal"
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password_de_gmail

# ----------------------------------------
# CLOUD STORAGE (Cloudflare R2)
# ----------------------------------------
STORAGE_BUCKET=
STORAGE_ACCOUNT_ID=
STORAGE_ENDPOINT=
STORAGE_PUBLIC_URL=
STORAGE_REGION=auto
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=

# ----------------------------------------
# AI SERVICES (ASISTENTE VIRTUAL)
# ----------------------------------------
GROQ_API_KEY=tu_groq_api_key_aqui
GEMINI_API_KEY=tu_gemini_api_key_aqui

# ----------------------------------------
# GOOGLE CALENDAR (OPCIONAL)
# ----------------------------------------
# ID del calendario (ejemplo: abc123@group.calendar.google.com)
GOOGLE_CALENDAR_ID=

# Credenciales del Service Account (JSON en una sola línea)
# Ejemplo: {"type":"service_account","project_id":"...","private_key":"..."}
GOOGLE_CREDENTIALS=

# ----------------------------------------
# WHATSAPP BUSINESS API (OPCIONAL)
# ----------------------------------------
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# ----------------------------------------
# TELEGRAM BOT API (OPCIONAL)
# ----------------------------------------
TELEGRAM_BOT_TOKEN=

# ----------------------------------------
# SERVIDOR
# ----------------------------------------
PORT=3000
NODE_ENV=development

# ----------------------------------------
# CORS (FRONTEND URL)
# ----------------------------------------
FRONTEND_URL=http://localhost:5173

# ----------------------------------------
# RATE LIMITING
# ----------------------------------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ----------------------------------------
# WEBSOCKET
# ----------------------------------------
WS_PORT=3001

